# Etapa de producci贸n
FROM node:18-alpine

WORKDIR /app

# Copiar package.json
COPY package*.json ./

# Instalar dependencias de producci贸n INCLUYENDO vite
RUN npm ci --only=production

#  COPIAR EL VITE.CONFIG.TS A LA ETAPA DE PRODUCCIN
COPY vite.config.ts ./
COPY --from=builder /app/dist ./dist

EXPOSE 4173

CMD ["npx", "vite", "preview", "--host", "0.0.0.0", "--port", "4173"]